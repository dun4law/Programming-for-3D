    --panel-bg: rgba(10, 20, 40, 0.9);
    --text-color: rgb(100, 220, 255);
    --text-white: rgb(255, 255, 255);
    --hover-color: rgb(80, 200, 255);
    --disabled-color: rgb(128, 128, 128);
    --border-color: rgb(0, 180, 255);
    -unity-font-definition: url("project://database/Assets/UI/Fonts/Ticketing.ttf?fileID=12800000&guid=5dbf1a3e43bce6545ba6af77d8e786fd&type=3#Ticketing");
}

.flying-jets-container {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.flying-jet {
    position: absolute;
    width: 80px;
    height: 80px;
    background-image: resource("UI/Icons/flying-jet-new");
    -unity-background-scale-mode: scale-to-fit;
    opacity: 0.15;
}

.jet-ltr {
    rotate: 90deg;
}

.jet-ltr-1 {
    top: 12%;
    left: -100px;
    width: 60px;
    height: 60px;
    opacity: 0.12;
    transition-property: translate;
    transition-duration: 18s;
    transition-timing-function: linear;
}

.jet-ltr-2 {
    top: 35%;
    left: -100px;
    width: 90px;
    height: 90px;
    opacity: 0.18;
    transition-property: translate;
    transition-duration: 14s;
    transition-timing-function: linear;
}

.jet-ltr-3 {
    top: 58%;
    left: -100px;
    width: 50px;
    height: 50px;
    opacity: 0.1;
    transition-property: translate;
    transition-duration: 22s;
    transition-timing-function: linear;
}

.jet-ltr-4 {
    top: 78%;
    left: -100px;
    width: 70px;
    height: 70px;
    opacity: 0.14;
    transition-property: translate;
    transition-duration: 16s;
    transition-timing-function: linear;
}

.jet-ltr-5 {
    top: 45%;
    left: -100px;
    width: 75px;
    height: 75px;
    opacity: 0.16;
    transition-property: translate;
    transition-duration: 19s;
    transition-timing-function: linear;
}

.jet-rtl {
    rotate: -90deg;
}

.jet-rtl-1 {
    top: 8%;
    right: -100px;
    left: auto;
    width: 70px;
    height: 70px;
    opacity: 0.13;
    transition-property: translate;
    transition-duration: 20s;
    transition-timing-function: linear;
}

.jet-rtl-2 {
    top: 28%;
    right: -100px;
    left: auto;
    width: 55px;
    height: 55px;
    opacity: 0.11;
    transition-property: translate;
    transition-duration: 24s;
    transition-timing-function: linear;
}

.jet-rtl-3 {
    top: 52%;
    right: -100px;
    left: auto;
    width: 85px;
    height: 85px;
    opacity: 0.16;
    transition-property: translate;
    transition-duration: 15s;
    transition-timing-function: linear;
}

.jet-rtl-4 {
    top: 72%;
    right: -100px;
    left: auto;
    width: 65px;
    height: 65px;
    opacity: 0.12;
    transition-property: translate;
    transition-duration: 19s;
    transition-timing-function: linear;
}

.jet-rtl-5 {
    top: 40%;
    right: -100px;
    left: auto;
    width: 80px;
    height: 80px;
    opacity: 0.15;
    transition-property: translate;
    transition-duration: 17s;
    transition-timing-function: linear;
}

.jet-ltr.flying {
    translate: 2200px 0;
}

.jet-rtl.flying {
    translate: -2200px 0;
}

.jet-diagonal-1.flying {
    translate: 2200px 1000px;
}

.jet-diagonal-2.flying {
    translate: 2200px -1000px;
}

.jet-diagonal-3.flying {
    translate: -2200px 1000px;
}

.jet-diagonal-4.flying {
    translate: -2200px -1000px;
}

