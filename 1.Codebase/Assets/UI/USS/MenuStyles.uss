/* ============================================= */
/* FULLSCREEN MODEL PREVIEW STYLES */
/* ============================================= */

.fullscreen-toggle-button {
    position: absolute;
    bottom: 50px;
    right: 15px;
    width: 120px;
    height: 50px;
    background-color: rgba(0, 180, 255, 0.5);
    border-width: 3px;
    border-color: var(--primary-color);
    border-radius: 10px;
    color: rgb(255, 255, 255);
    font-size: 16px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    transition-duration: 0.2s;
    /* Glow effect */
    -unity-background-image-tint-color: rgba(0, 200, 255, 0.3);
}

.fullscreen-toggle-button:hover {
    background-color: rgba(0, 180, 255, 0.8);
    border-color: rgb(100, 220, 255);
    scale: 1.08;
    /* Brighter glow on hover */
}

.fullscreen-toggle-button:active {
    background-color: var(--primary-color);
    color: rgb(0, 0, 0);
}

.fullscreen-overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 5, 15, 0.95);
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.fullscreen-preview-container {
    flex-grow: 1;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
}

.fullscreen-3d-preview {
    width: 90%;
    height: 85%;
    background-color: rgba(10, 20, 40, 0.5);
    border-width: 2px;
    border-color: var(--primary-color);
    border-radius: 10px;
}

.fullscreen-controls {
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 15px;
}

.fullscreen-hint {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.7);
    margin-right: 30px;
}

.close-fullscreen-button {
    height: 45px;
    min-width: 150px;
    padding: 0 25px;
    background-color: rgba(200, 50, 50, 0.3);
    border-width: 2px;
    border-color: rgb(200, 80, 80);
    border-radius: 8px;
    color: rgb(255, 150, 150);
    font-size: 18px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    transition-duration: 0.2s;
}

.close-fullscreen-button:hover {
    background-color: rgba(200, 50, 50, 0.6);
    border-color: rgb(255, 100, 100);
    color: rgb(255, 200, 200);
    scale: 1.05;
}

.close-fullscreen-button:active {
    background-color: rgb(200, 50, 50);
    color: rgb(255, 255, 255);
}

