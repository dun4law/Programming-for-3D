<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:Style src="project://database/Assets/UI/USS/MenuStyles.uss" />
    
    <ui:VisualElement name="root" class="how-to-play-root">
        <!-- Header -->
        <ui:VisualElement class="how-to-play-header">
            <ui:Button name="back-button" text="&lt; BACK" class="back-button" />
            <ui:Label text="HOW TO PLAY" class="page-title" />
            <ui:Button name="reset-button" text="RESET DEFAULTS" class="reset-button" />
        </ui:VisualElement>
        
        <!-- New Split Layout -->
        <ui:VisualElement class="how-to-play-container">
            
            <!-- Left Sidebar -->
            <ui:VisualElement class="sidebar-panel">
                <ui:Label text="CATEGORIES" class="sidebar-title" />

                <ui:ScrollView class="sidebar-scroll">
                    <ui:Button name="btn-controls" class="sidebar-button active">
                        <ui:Label text="CONTROLS" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-controller" class="sidebar-button">
                        <ui:Label text="CONTROLLER" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-tips" class="sidebar-button">
                        <ui:Label text="QUICK TIPS" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-mission" class="sidebar-button">
                        <ui:Label text="MISSION" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-characters" class="sidebar-button">
                        <ui:Label text="CHARACTERS" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-hud" class="sidebar-button">
                        <ui:Label text="HUD" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-warnings" class="sidebar-button">
                        <ui:Label text="WARNINGS" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-combat" class="sidebar-button">
                        <ui:Label text="COMBAT" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-scoring" class="sidebar-button">
                        <ui:Label text="SCORING" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-features" class="sidebar-button">
                        <ui:Label text="FEATURES" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-aircraft" class="sidebar-button">
                        <ui:Label text="AIRCRAFT" class="sidebar-button-text" />
                    </ui:Button>

                    <ui:Button name="btn-tactics" class="sidebar-button">
                        <ui:Label text="AIR COMBAT" class="sidebar-button-text" />
                    </ui:Button>                    <ui:Button name="btn-future" class="sidebar-button">
                        <ui:Label text="FUTURE" class="sidebar-button-text" />
                    </ui:Button>
                </ui:ScrollView>
            </ui:VisualElement>
            
            <!-- Right Content Area -->
            <ui:VisualElement class="content-panel">
                <ui:ScrollView class="content-scroll">
                    
                    <!-- 1. CONTROLS SECTION -->
                    <ui:VisualElement name="section-controls" class="content-section">
                        <ui:Label text="FLIGHT CONTROLS" class="section-title" />
                        <ui:Label text="Tap the button to check the keyboard key" class="tip-text" style="color: rgba(200, 200, 200, 0.8); margin-bottom: 15px; -unity-text-align: middle-center; font-size: 14px;" />
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Throttle Up" class="control-label" />
                            <ui:Button name="key-throttle-up" text="Shift" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Throttle Down" class="control-label" />
                            <ui:Button name="key-throttle-down" text="Ctrl" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Pitch Up" class="control-label" />
                            <ui:Button name="key-pitch-up" text="W" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Pitch Down" class="control-label" />
                            <ui:Button name="key-pitch-down" text="S" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Roll Left" class="control-label" />
                            <ui:Button name="key-roll-left" text="A" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Roll Right" class="control-label" />
                            <ui:Button name="key-roll-right" text="D" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Yaw Left" class="control-label" />
                            <ui:Button name="key-yaw-left" text="Q" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Yaw Right" class="control-label" />
                            <ui:Button name="key-yaw-right" text="E" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Toggle Flaps" class="control-label" />
                            <ui:Button name="key-flaps" text="F" class="key-button" />
                        </ui:VisualElement>

                        <ui:Label text="WEAPONS &amp; SYSTEMS" class="section-title" style="margin-top: 40px;" />

                        <ui:VisualElement class="control-row">
                            <ui:Label text="Fire Missile" class="control-label" />
                            <ui:Button name="key-fire-missile" text="Space" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Fire Cannon" class="control-label" />
                            <ui:Button name="key-fire-cannon" text="Left Mouse" class="key-button" />
                        </ui:VisualElement>
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Deploy Flares (Countermeasures)" class="control-label" />
                            <ui:Button name="key-deploy-flares" text="X" class="key-button" />
                        </ui:VisualElement>

                        <ui:VisualElement class="control-row">
                            <ui:Label text="Toggle AI Autopilot" class="control-label" />
                            <ui:Button name="key-toggle-ai" text="Tab" class="key-button" />
                        </ui:VisualElement>

                        <ui:Label text="CAMERA &amp; VIEW" class="section-title" style="margin-top: 40px;" />
                        
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Look Around" class="control-label" />
                            <ui:Label text="Mouse / Arrow Keys" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                    </ui:VisualElement>

                    <!-- 1.5 CONTROLLER & MOBILE SECTION -->
                    <ui:VisualElement name="section-controller" class="content-section" style="display: none;">
                        <ui:Label text="GAMEPAD CONTROLS" class="section-title" />
                        <ui:Label text="The game supports standard Xbox and PlayStation controllers." class="guide-text highlight" />

                        <ui:Label text="FLIGHT CONTROLS" class="guide-subtitle" />
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Throttle" class="control-label" />
                            <ui:Label text="Left Trigger (Down) / Right Trigger (Up)" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Pitch &amp; Roll" class="control-label" />
                            <ui:Label text="Left Stick" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Yaw" class="control-label" />
                            <ui:Label text="Left/Right Bumpers" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Camera" class="control-label" />
                            <ui:Label text="Right Stick" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>

                        <ui:Label text="WEAPONS &amp; SYSTEMS" class="guide-subtitle" />
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Fire Missile" class="control-label" />
                            <ui:Label text="A Button / X Button (PlayStation)" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Fire Cannon" class="control-label" />
                            <ui:Label text="X Button / Square Button (PlayStation)" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Deploy Flares" class="control-label" />
                            <ui:Label text="B Button / Circle Button (PlayStation)" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Toggle AI Autopilot" class="control-label" />
                            <ui:Label text="Y Button / Triangle Button (PlayStation)" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Toggle Flaps" class="control-label" />
                            <ui:Label text="D-Pad Down" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>

                        <ui:Label text="MOBILE CONTROLS" class="section-title" style="margin-top: 40px;" />
                        <ui:Label text="FOR THE BEST EXPERIENCE, PLAY WITH KEYBOARD OR CONTROLLER!" class="guide-text" style="color: #FFD700; -unity-font-style: bold; margin-bottom: 10px;" />
                        <ui:Label text="Mobile controls are very basic and only support limited actions. Throttle, yaw, flares, cannon, and other controls are not available on mobile." class="guide-text" style="color: #FF6B6B; margin-bottom: 15px;" />

                        <ui:Label text="TOUCH CONTROLS" class="guide-subtitle" />
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Pitch &amp; Roll" class="control-label" />
                            <ui:Label text="Drag/Swipe on Screen" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Fire Missile" class="control-label" />
                            <ui:Label text="Single Tap Screen" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Toggle AI Autopilot" class="control-label" />
                            <ui:Label text="Double Tap Screen" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>

                        <ui:Label text="GYROSCOPE CONTROLS" class="guide-subtitle" />
                        <ui:VisualElement class="control-row">
                            <ui:Label text="Roll Left/Right" class="control-label" />
                            <ui:Label text="Tilt/Roll Your Device" class="control-value-label" style="color: #999;" />
                        </ui:VisualElement>

                        <ui:Label text="WHAT'S NOT AVAILABLE ON MOBILE" class="guide-subtitle" />
                        <ui:Label text="Throttle control (speed is fixed or AI-controlled)" class="tip-text" style="color: #999;" />
                        <ui:Label text="Yaw control (rudder)" class="tip-text" style="color: #999;" />
                        <ui:Label text="Cannon/Gun fire" class="tip-text" style="color: #999;" />
                        <ui:Label text="Flares/Countermeasures" class="tip-text" style="color: #999;" />
                        <ui:Label text="Flaps toggle" class="tip-text" style="color: #999;" />
                        <ui:Label text="Camera control" class="tip-text" style="color: #999;" />

                        <ui:Label text="MOBILE TIPS" class="guide-subtitle" />
                        <ui:Label text="Enable AI Autopilot (double tap) to let the AI handle throttle, combat, and evasion." class="tip-text" />
                        <ui:Label text="Swipe up/down for pitch, left/right for roll." class="tip-text" />
                        <ui:Label text="Tap to fire missiles when you see the LOCK indicator on enemies." class="tip-text" />
                        <ui:Label text="The gyroscope calibrates when the game starts - hold your device level." class="tip-text" />
                    </ui:VisualElement>

                    <!-- 2. TIPS SECTION -->
                    <ui:VisualElement name="section-tips" class="content-section" style="display: none;">
                        <ui:Label text="QUICK TIPS" class="section-title" />
                        <ui:VisualElement class="htp-section-image htp-image-tips" />
                        <ui:Label text="BASIC FLIGHT" class="guide-subtitle" />
                        <ui:Label text="Hold Shift to increase throttle, Ctrl to decrease" class="tip-text" />
                        <ui:Label text="Use flaps (F) when landing at low speed to prevent stalling" class="tip-text" />
                        <ui:Label text="Pull UP (S key) to climb, Push DOWN (W key) to dive" class="tip-text" />
                        
                        <ui:Label text="COMBAT TACTICS" class="guide-subtitle" />
                        <ui:Label text="Lock onto enemies before firing missiles for higher hit chance" class="tip-text" />
                        <ui:Label text="Lead your target when using cannons (aim ahead of them)" class="tip-text" />
                        <ui:Label text="Use terrain (mountains) to break enemy radar line-of-sight" class="tip-text" />
                        
                        <ui:Label text="SURVIVAL" class="guide-subtitle" />
                        <ui:Label text="Listen to RWR sounds - fast beeping means a missile is inbound!" class="tip-text" />
                        <ui:Label text="Deploy Flares (X key) immediately when you hear missile warning!" class="tip-text" />
                        <ui:Label text="Flares + hard turn = best evasion. Don't just fly straight!" class="tip-text" />
                        <ui:Label text="Don't fly too high or you might stall in thin air" class="tip-text" />
                    </ui:VisualElement>
                    
                    <!-- 3. MISSION SECTION -->
                    <ui:VisualElement name="section-mission" class="content-section" style="display: none;">
                        <ui:Label text="MISSION OBJECTIVES" class="section-title" />
                        <ui:VisualElement class="htp-section-image htp-image-mission" />
                        <ui:Label text="DEFEND THE AIRSPACE" class="guide-subtitle" />
                        <ui:Label text="Hostile aircraft have entered the area. Your orders are to intercept and destroy all enemy bogies." class="guide-text" />
                        
                        <ui:Label text="WAVE ATTACKS" class="guide-subtitle" />
                        <ui:Label text="Enemies arrive in waves. You must defeat all enemies in the current wave to trigger the next." class="guide-text" />
                        <ui:Label text="Wave 1: Reconnaissance (Light Fighters)" class="guide-text" />
                        <ui:Label text="Wave 2: Strike Group (Multiple Bogeys)" class="guide-text" />
                        <ui:Label text="Wave 3: Air Superiority (Elite Aces)" class="guide-text" />
                        
                        <ui:Label text="FAIL CONDITIONS" class="guide-subtitle" />
                        <ui:Label text="You fail the mission if:" class="guide-text" />
                        <ui:Label text="- Your aircraft is destroyed (0% HP)" class="guide-text" />
                        <ui:Label text="- You crash into the ground or ocean" class="guide-text" />
                        <ui:Label text="- You leave the combat zone for too long" class="guide-text" />
                    </ui:VisualElement>

                    <!-- 3.5 CHARACTERS SECTION -->
                    <ui:VisualElement name="section-characters" class="content-section" style="display: none;">
                        <ui:VisualElement class="htp-section-image htp-image-characters" />
                        <ui:Label text="CHARACTERS" class="section-title" />
                        <ui:Label text="These are the voices shaping the mission. Know who they are, what they want, and why they act the way they do." class="guide-text highlight" />

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-phoenix-lead" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="PHOENIX LEAD (YOU)" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-f15" />
                                        <ui:Label text="F-15C EAGLE" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: INFJ" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="Silent, professional, and deadly. You are the tip of the spear in Operation Antigravity. Your background is classified, but your skills in the cockpit are undeniable." class="character-desc" />
                                <ui:Label text="Acts with calm focus, cutting through noise to make hard calls. Protective, disciplined, and mission-first, they value results over speeches. Morally good, but willing to be ruthless when lives are at risk." class="character-desc" />
                                <ui:Label text="Why this jet: The F-15C is relentless and direct, matching a protector who values clean, decisive outcomes over empty theater." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-lt-one" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="LIEUTENANT ONE (PHOENIX TWO)" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-su27" />
                                        <ui:Label text="SU-27 FLANKER" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: ISFJ" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="Your loyal wingman. He follows your lead without question, providing cover and support during the most intense dogfights. Reliable and always ready for the next sortie." class="character-desc" />
                                <ui:Label text="Quiet and methodical, he backs you without drama, reads the fight early, and covers blind spots. Loyal and competent to the core, he avoids politics; his ethics stay steady." class="character-desc" />
                                <ui:Label text="Why this jet: The Su-27 rewards calm, disciplined control?erfect for a stoic wingman who stays steady and shields the formation." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-gloria" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="FLEET ADMIRAL GLORIA" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-rafale" />
                                        <ui:Label text="DASSAULT RAFALE" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: INFJ" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="The supreme commander of the operation. She is known for her 'toxic positivity' and manipulative leadership style. She demands perfection and views any failure as a personal betrayal." class="character-desc" />
                                <ui:Label text="She leads with polished charm and emotional pressure, framing obedience as positivity. Decisions serve her image first, outcomes second. Capable but manipulative, she is morally compromised and dangerous when challenged." class="character-desc" />
                                <ui:Label text="Why this jet: The Rafale is polished and adaptable, just like a commander who performs charm while controlling every angle." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-ark" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="DIRECTOR ARK" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-mig21" />
                                        <ui:Label text="MIG-21 FISHBED" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: INTJ" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="The head of intelligence. Ark is calculating and secretive, often providing missions with cryptic objectives. He values data above all else, even human lives." class="character-desc" />
                                <ui:Label text="A cold, analytical planner who trusts data over people, he issues rigid directives and withholds context. Brilliant at systems, poor at empathy; his methods are effective but ethically gray and isolating." class="character-desc" />
                                <ui:Label text="Why this jet: The MiG-21 is simple, fast, and unforgiving?deal for a controller who values rigid execution and tight margins." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-teacher" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="TEACHER CHAN" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-fa18" />
                                        <ui:Label text="F/A-18E SUPER HORNET" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: ESFJ" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="A civilian broadcast journalist who finds herself caught in the middle of the conflict. She tries to find the truth behind the propaganda, often putting herself in danger." class="character-desc" />
                                <ui:Label text="On air she is soothing and poised, choosing careful words to prevent panic. Off air she seeks truth and helps where she can. Well-intentioned, but sometimes complicit in a polished narrative." class="character-desc" />
                                <ui:Label text="Why this jet: The Super Hornet is balanced and crowd-pleasing, mirroring an idol who smooths over tension and keeps things looking stable." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-donkey" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="COLONEL DONKEY" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-tornado" />
                                        <ui:Label text="PANAVIA TORNADO" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: ESTP" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="A veteran ground commander in charge of fortress defenses. He is loud, aggressive, and highly protective of his troops, often clashing with Gloria's high-level strategy." class="character-desc" />
                                <ui:Label text="He acts like a showman, loud and bold, always performing for cameras. Beneath the bluster he cares about his troops, but his ego can cloud judgment. Good heart, messy execution." class="character-desc" />
                                <ui:Label text="Why this jet: The Tornado is loud and theatrical, fitting a showman who loves spectacle and bold, public-facing power." class="character-jet-reason" />
                            </ui:VisualElement>
                        </ui:VisualElement>

                        <ui:VisualElement class="character-card">
                            <ui:VisualElement class="character-portrait-container">
                                <ui:VisualElement class="char-portrait char-tech" />
                            </ui:VisualElement>
                            <ui:VisualElement class="char-info-container">
                                <ui:VisualElement class="character-header">
                                    <ui:Label text="WEAPONS TECH" class="character-name" />
                                    <ui:VisualElement class="character-jet">
                                        <ui:Label text="FAVORITE JET" class="character-jet-label" />
                                        <ui:VisualElement class="jet-icon jet-icon-hawk200" />
                                        <ui:Label text="HAWK 200" class="character-jet-name" />
                                    </ui:VisualElement>
                                </ui:VisualElement>
                                <ui:VisualElement class="character-tags">
                                    <ui:Label text="PERSONAL" class="character-tag" />
                                    <ui:Label text="MBTI: ISTP" class="character-tag" />
                                </ui:VisualElement>
                                <ui:Label text="The unsung hero on the ground. She ensures your aircraft is armed and ready for every sortie, often working under extreme pressure to keep the fleet flying." class="character-desc" />
